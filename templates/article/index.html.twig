{% extends 'base.html.twig' %}

{% block title %}All articles{% endblock %}

{% block body %}
    <header>
        <a href="https://osu.ppy.sh/home">Accueil</a>
        <a href="https://osu.ppy.sh/beatmapsets">Beatmaps</a>
        <a href="https://osu.ppy.sh/rankings/osu/performance">Classements</a>
        <a href="https://osu.ppy.sh/community/forums">Forums</a>
        <a href="https://osu.ppy.sh/wiki/fr/Main_Page">Aide</a>

    </header>
    {% for article in articles %}
        <div class="article">
            <h1>{{ article.title }}</h1>
            {% if article.image is defined and article.image is not empty %}
                <td>
                    <img src="{{ asset('/uploads/' ~ article.image) }}" width="530px" height="100%" alt="image de l'article"/>
                </td>
            {% endif %}
            <p>{{ article.content }}</p>
            <p>Article créé le : {{ article.createdAt|date('d/m/Y') }}</p>
        </div>
    {% endfor %}

{% endblock %}
