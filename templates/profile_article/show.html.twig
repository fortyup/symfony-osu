{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <main>
        <h1>Article</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    <img src={{ asset('upload/' ~ article.image) }} width="100%" height="auto"/>
                </td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('admin_article_index') }}">back to list</a>

        <a href="{{ path('admin_article_edit', {'id': article.id}) }}">edit</a>

        {{ include('profile_article/_delete_form.html.twig') }}
    </main>
{% endblock %}
