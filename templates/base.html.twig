<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# link the css #}
    <link rel="stylesheet" href="{{ asset('/css/style.css') }}">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<header>
    <div class="menu">
        <img src="{{ asset("/image/osu-logo-white.svg") }}" alt="osu logo in white" width="60px" height="60px"
             class="img-menu"/>
        <nav>
            <a href="{{ path('home') }} " class="link-menu">Accueil</a>
            <a href="#" class="link-menu">Beatmaps</a>
            <a href="#" class="link-menu">Classements</a>
            <a href="{{ path("app_article") }}" class="link-menu">Forums</a>
            <a href="#" class="link-menu">Aide</a>
        </nav>
        <img src="image/artist-noavatar@2x.jpg" alt="basic profile picture" class="profile img-menu">
    </div>
</header>
<main>
    <div class="tableauDeBord">
        {% if app is defined and app.user is defined and app.user.email is defined and app.user.email is not empty %}
            <p>Welcome {{ app.user.email }}!</p>
        {% else %}
            <p>Welcome to my website!</p>
        {% endif %}
    </div>
    <div class="dashboard">
        <a href="{{ path('app_contact') }}">Nous contacter</a>
        <div class="identification">
            <a href="{{ path('app_login') }}">Se connecter</a>
            <a href="{{ path('app_register') }}">S'inscrire</a>
        </div>
    </div>
    <div class="mainPage">
        {% block body %}{% endblock %}
    </div>
</main>
<footer>
    <div class="footer-menu">
        <a href="#" class="link-menu">Terms</a>
        <a href="#" class="link-menu">Privacy</a>
        <a href="https://github.com/fortyup/symfonyProjet" class="link-menu">Source Code</a>
    </div>
</footer>
</body>
</html>